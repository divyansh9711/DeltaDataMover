<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.divyanshsingh.deltadatamover.MainActivity">
    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scaleType="fitXY"
        android:src="@drawable/background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_above="@+id/bottomArea"
        android:layout_height="120dp"
        android:background="#FFFFFF"
        android:layout_alignParentStart="true">
        <Spinner
            android:id="@+id/mspin"
            android:layout_width="match_parent"
            android:textAlignment="textStart"
            android:layout_alignParentStart="true"
            android:layout_height="40dp"
            android:background="#4b5e9c"
            android:textColor="#FFFFFF"
            android:padding="2dp"
            android:textSize="20sp"
            android:layout_alignParentTop="true">Array

        </Spinner>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/tview3"
            android:background="#FFFFFF"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="#AAAAAA"
            android:text = "currently"
            android:layout_below="@+id/mspin"/>
        <Button
            android:id="@+id/bookButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="#D2486F"
            android:text="BOOK"
            android:textColor="#FFFFFF"
            android:padding="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="2dp"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:id = "@+id/tview"
            android:textColor="#000000"
            android:textSize="20sp"
            android:text="SuperTrain A136"
            />



    </RelativeLayout>
    <LinearLayout
        android:id = "@+id/bottomArea"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignParentBottom="true"
        android:background="#86C664"
        android:weightSum="32"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:weightSum="32">
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/upArrow"
                android:src="@drawable/arrowup"
                android:scaleType="fitCenter"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/upText"
                android:layout_weight="7"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_gravity="center_vertical"
                android:text="Northbound\n50min"
                android:layout_height="wrap_content" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/downArrow"
                android:src="@drawable/arrowdown"
                android:scaleType="fitCenter"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/downText"
                android:layout_weight="7"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:text="Southbound\n20min"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10">
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/location"
                android:src="@drawable/gps"
                android:scaleType="fitCenter"
                android:layout_weight="6"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/upText2"
                android:layout_weight="7"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:text="You are:\n10 min\naway"
                android:layout_height="wrap_content" />
            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/news"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:scaleType="fitCenter"
                android:src="@drawable/news" />

            <Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/downText2"
                android:layout_weight="7"
                android:layout_gravity="center_vertical"
                android:layout_width="0dp"
                android:gravity="center_vertical"
                android:text="WARNING:\nMorning\nDays"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"/>
    </LinearLayout>

</RelativeLayout>
